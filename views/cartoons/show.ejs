<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Review</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% let total=0 %>
      <% movie.reviews.forEach(function(r) { %>
        <% total +=r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer">
              <%= r.userName %>
            </td>
            <td>
              <%= r.createdAt.toLocaleDateString() %>
            </td>
            <td>
              <%= r.content %>
            </td>
            <td>
              <%= r.rating %>
            </td>
          </tr>
          <% }); %>
            <tr>
              <td colspan="3"></td>
              <td><strong>
                  <%= (total / cartoons.reviews.length).toFixed(1) %>
                </strong></td>
            </tr>
  </tbody>
</table>
  <th>Rating</th>
  <th></th>
