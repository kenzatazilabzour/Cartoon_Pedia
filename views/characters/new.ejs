<%- include('../partials/header') %>

    <title>
      <%= title %> - Add Character
    </title>
  </head>

  <body>
    <h1>
      <%= title %>
    </h1>
    <% if (error) { %>
      <p class="error">
        <%= error.message %>
      </p>
      <% } %>
        <form action="/characters/new" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
          <!-- Other character input fields (image, biography, superpowers, famousQuotes) -->
          <button type="submit">Add Character</button>
        </form>
        <a href="/characters">Back to All Characters</a>
  </body>


  <%- include('../partials/footer') %>
